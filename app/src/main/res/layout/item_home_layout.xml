<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/favoriteImageCardView"
        android:layout_width="94dp"
        android:layout_height="96dp"
        app:cardCornerRadius="@dimen/image_card_radius"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name" />

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/nameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="asdasdas"
        app:layout_constraintEnd_toEndOf="@+id/favoriteImageCardView"
        app:layout_constraintStart_toStartOf="@+id/favoriteImageCardView"
        app:layout_constraintTop_toBottomOf="@+id/favoriteImageCardView" />

</androidx.constraintlayout.widget.ConstraintLayout>